#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd ${HOME}

curl wget http://ftp.postgresql.org/pub/source/v8.3.7/postgresql-8.3.7.tar.gz > postgresql-8.3.7.tar.gz
tar xzvf postgresql-8.3.7.tar.gz
cd postgresql-8.3.7
echo `pwd`

#cd $BUILD_DIR

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent

# make install
echo "-----> Installing with Make"
make install 2>&1 | indent

#change to the build dir 
cd $BUILD_DIR